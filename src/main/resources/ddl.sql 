create table rl_restaurante_forma_pagamento (restaurante_id int8 not null, forma_pagamento_id int8 not null);
create table tb_cidade (id int8 generated by default as identity, nome varchar(255) not null, estado_id int8 not null, primary key (id));
create table tb_cozinha (id int8 generated by default as identity, nome varchar(255) not null, primary key (id));
create table tb_estado (id int8 generated by default as identity, nome varchar(255) not null, primary key (id));
create table tb_forma_pagamento (id int8 generated by default as identity, nome varchar(255) not null, primary key (id));
create table tb_grupo (id int8 generated by default as identity, nome varchar(255), primary key (id));
create table tb_grupo_permissao (grupo_id int8 not null, persimssao_id int8 not null);
create table tb_permissao (id int8 generated by default as identity, descricao varchar(255) not null, nome varchar(255) not null, primary key (id));
create table tb_produto (id int8 generated by default as identity, ativo boolean not null, descricao varchar(255) not null, nome varchar(255) not null, preco numeric(19, 2) not null, restaurante_id int8 not null, primary key (id));
create table tb_restaurante (id int8 generated by default as identity, data_atualizacao timestamp not null, data_cadastro timestamp not null, endereco_bairro varchar(255), endereco_cep varchar(255), endereco_complemento varchar(255), endereco_logradouro varchar(255), endereco_numero varchar(255), nome varchar(255) not null, taxa_frete numeric(19, 2) not null, cozinha_id int8 not null, endereco_cidade_id int8, primary key (id));
create table tb_usuario (id int8 generated by default as identity, data_cadastro timestamp, nome varchar(255) not null, senha varchar(255) not null, primary key (id));
create table tb_usuario_grupo (usuario_id int8 not null, grupo_id int8 not null);
